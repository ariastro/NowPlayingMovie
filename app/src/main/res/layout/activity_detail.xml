<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/backdrop_movie"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/detail_poster"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@id/backdrop_movie"
        android:layout_margin="10dp"
        tools:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backdrop_movie"
        android:layout_toRightOf="@id/detail_poster"
        tools:text="Title Movie"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="40dp"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/detail_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_title"
        android:layout_toRightOf="@id/detail_poster"
        tools:text="Rating : 7.0/10"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/detail_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_rating"
        android:layout_toRightOf="@id/detail_poster"
        tools:text="Release Date : 10-10-2019"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="19sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_poster"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/detail_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="dkjwqbhdkjbhksad;kasd asldjbasld asdljhab"
                android:textColor="#000"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>